@{
    ViewBag.Title = "Add";
}

<h2>Upload photo</h2>
<br />
<br />
<form id="upload-form" method="post" action="/api/photo/upload" class="dropzone" enctype="multipart/form-data">
    <input style="margin-top:-52px; position:fixed; margin-left:-20px" type="text" name="comment" placeholder="Comment" required />
    <input style="margin-top:200px; position: absolute; margin-left:-20px" type="submit" />
</form>
<br />
<br />
<br />
@Html.ActionLink("Cancel", "Upload")  |  @Html.ActionLink("Go back home", "../Home/Index")

@Styles.Render("~/Scripts/dropzonecss")

@section scripts{
    <script>
    @Scripts.Render("~/Scripts/dropzone")
    @Scripts.Render("~/Scripts/UploadImg")
    </script> 
}